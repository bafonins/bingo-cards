---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Custom bingo card generator" />
    <meta property="canonical" content={`${Astro.url.toString()}`} />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta property="og:locale" content="en_us" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${Astro.url.toString()}`} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {
      import.meta.env.DEV ? null : (
        <script
          async
          is:inline
          src={import.meta.env.PUBLIC_UMAMI_SCRIPT_URL}
          data-website-id={import.meta.env.PUBLIC_UMAMI_WEBSITE_ID}
        />
      )
    }
  </head>
  <body>
    <div class="layout">
      <slot />
    </div>
  </body>
</html>

<style>
  :root {
    --color-cell-bg: #e2e8f0;
    --color-cell-bg-hover: #94a3b8;
    --color-cell-bg-selected: #475569;
  }

  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

  body {
    padding-top: 16px;
    max-width: 120ch;
    margin: auto;
  }

  .layout {
    margin-top: 32px;
  }
</style>
